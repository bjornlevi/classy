<% if signed_in? %>
	<div class="row">
		<div class="span9">
			<ul class="nav nav-tabs">
				<li class="active" id="recents">
					<a href="#">Recent<span> (<%= @recents.total_entries %>)</span></a>
				</li>
				<li id="friends">
					<a href="#">Friends<span> (<%= @friends.total_entries %>)</span></a>
				</li>
				<li id="featured"><a href="#">Featured<span> (2)</span></a></li>
				<li id="tags"><a href="#">Tasks<span> (0)</span></a></li>
				<li id="notifications"><a href="#">Notifications<span> (11)</span></a></li>
			</ul>
			<div class="dashboard_box">
				<h3>Recent activity</h3>
				<div class="dashboard_content" id="dashboard_recents">
					<%= render 'shared/feed', :feed_items => @recents %>
				</div>
			</div>
			<div class="dashboard_box">
				<h3>Friend activity</h3>
				<div class="dashboard_content" id="dashboard_friends">
					<%= render 'shared/feed', :feed_items => @friends %>
				</div>
			</div>
			<div class="dashboard_box">
				<h3>Featured activity</h3>
				<div class="dashboard_content" id="dashboard_featured">
					<%= render 'shared/feed', :feed_items => @recents %>
				</div>
			</div>				
			<div class="dashboard_box">
				<h3>Tags cloud</h3>
				<div class="dashboard_content" id="dashboard_tags">
					<%= render 'shared/feed', :feed_items => @recents %>
				</div>
			</div>
			<div class="dashboard_box">
				<h3>My tasks</h3>
				<div class="dashboard_content" id="dashboard_tasks">
					<%= render 'shared/feed', :feed_items => @recents %>
				</div>
			</div>
			<div class="dashboard_box">
				<h3>Notifications</h3>
				<div class="dashboard_content" id="dashboard_notifications">
					<%= render 'shared/feed', :feed_items => @recents %>
				</div>
			</div>		
		</div>
		<div class="span3">
			<h3>All tags</h3>
			<% tag_cloud @tags, %w(css1 css2 css3 css4) do |a_tag, css_class| %> 
				<%= link_to a_tag.name, tag_path(a_tag.id), :class => css_class %> 
			<% end %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
	  <h1>Welcome to Classy</h1>

	  <h2>
	  	Collaborative blogging environment for students. Connect with your class.
	  </h2>

	  <%= link_to "Sign up now!", '/signup', class: "btn btn-large btn-primary" %>
	</div>

	<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>