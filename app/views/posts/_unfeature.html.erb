<%= form_for(@post.features.find_by_user_id(current_user),
             html: { method: :delete },
             remote: true) do |f| %>
	<%= f.hidden_field :post_id %>
	<%= link_to raw("Stop featuring this post <i class='icon-volume-off'></i>"), '#', 
	:onclick=>"$('#feature_form form').submit()",
  	alt: "Promote", title: "Promote" %>
<% end %>