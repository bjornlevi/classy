<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <div class="row">
        <div class="span4">
          <%= render 'shared/user_info_small' %>
        </div>
        <div class="span4 center">
          <nav>
            <ul class="nav dropdown-menu">
              <% for group in @user_groups %>
              <li><%= link_to group.name %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "New Class", groups_path %>
              </li>
            </ul>
            <%= link_to "CoBlogger", '', id: "logo" %>
          </nav>
        </div>
        <div class="span4">        
          <nav>
            <ul class="nav pull-right">
              <li><%= link_to raw("<i class='icon-home icon-white'></i>"), root_path %></li>
              <% if signed_in? %>
                <li><%= link_to raw("<i class='icon-info-sign icon-white'></i>"), users_path %></li>
                <li id="fat-menu" class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class='icon-user icon-white'></i> <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Profile", current_user %></li>
                    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "Sign out", signout_path, method: "delete" %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to "Sign in", signin_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>