<div class="row">
 	<div class="span3">
 		<%= render 'shared/user_info' %>
 		<section>
 			<h4>About</h4>
 			<%= @user.profile.description %>
 		</section>
	</div>
	<div class="span6">
		<aside>
			<%= render 'shared/blurt_form' if signed_in?%>		
			<%= render 'follow_form' if signed_in? %>
		</aside>
		<% if @user.blurts.any? %>
			<% if is_admin? %>
				<img src="<%=@chart_url%>">
			<% end %>
			<h3>Posts (<%= @user.blurts.count + @user.posts.count %>)</h3>
			<ol class="posts">
				<%= render 'shared/feed', :feed_items => @user_feed %>
			</ol>
			<%= will_paginate @user_feed %>
		<% end %>
	</div>
	<div class="span3">
		<h3>All tags</h3>
		<% tag_cloud @tags, %w(css1 css2 css3 css4) do |a_tag, css_class| %> 
			<%= link_to a_tag.name, tag_path(a_tag.name), :class => css_class %> 
		<% end %>
		<h3>Recieved tags</h3>
		<% tag_cloud @created_tags, %w(css1 css2 css3 css4) do |r_tag, css_class| %> 
			<%= link_to r_tag.name, tag_path(r_tag.name), :class => css_class %> 
		<% end %>
		<h3>Given tags</h3>
		<% tag_cloud @given_tags, %w(css1 css2 css3 css4) do |g_tag, css_class| %> 
			<%= link_to g_tag.name, tag_path(g_tag.name), :class => css_class %> 
		<% end %>
	</div>
</div>