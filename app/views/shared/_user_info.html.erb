<section>
	<a href="<%= user_path(@user) %>">
	  <%= gravatar_for @user %>
	</a>
</section>
<section>
  	<%= @user.email %>
</section>
<section>
	<%= pluralize(@user.blurts.count, "blurt") %>
</section>
<section>
	<h4>Following (<%= @user.friendships.count %>)</h4>
	<% if @user.friendships.empty? %>
		&nbsp;
	<% else %>
		<% for friendship in @user.friendships %>
			<a href="<%= user_path(friendship.friend) %>">
				<%= gravatar_for friendship.friend, size=20 %>
			</a>
		<% end %>
	<% end %>
</section>
<section>
	<h4>Followers (<%= @user.inverse_friendships.count %>)</h4>
	<% if @user.inverse_friendships.empty? %>
		&nbsp;
	<% else %>
		<% for friendship in @user.inverse_friendships %>
			<a href="<%= user_path(friendship.friend) %>">
				<%= gravatar_for friendship.friend, size=20 %>
			</a>
		<% end %>
	<% end %>
</section>
