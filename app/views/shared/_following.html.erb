<h4>Following <span id="nr_following">(<%= @user.friendships.count %>)</span></h4>
<% if @user.friendships.empty? %>
	&nbsp;
<% else %>
	<% for friendship in @user.friendships %>
		<a href="<%= user_path(friendship.friend) %>">
			<%= gravatar_for friendship.friend, size=20 %>
		</a>
	<% end %>
<% end %>